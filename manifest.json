{
    "manifest_version": 3,
    "name": "DIY Grammar Guard",
    "version": "1.0.0",
    "description": "Grammar checker with AI-powered cold outreach generator",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://*.linkedin.com/*",
      "https://*.generativelanguage.googleapis.com/*",
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "scraper.js"],
        "css": ["style.css"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "DIY Grammar Guard Settings",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["style.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  